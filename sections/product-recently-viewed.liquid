{%- style -%}
   [data-section-id="{{ section.id }}"].gp-product-slider-wrapper {
    background: {{ section.settings.background_color }};
  }
  [data-section-id="{{ section.id }}"].pt-{{ section.settings.padding_top }}-{{ section.settings.padding_top_mb }} {
    padding-top: {{ section.settings.padding_top_mb }}px;
  }
  [data-section-id="{{ section.id }}"].pb-{{ section.settings.padding_bottom }}-{{ section.settings.padding_bottom_mb }} {
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  @media screen and (min-width: 1024px) {
    [data-section-id="{{ section.id }}"].pt-{{ section.settings.padding_top }}-{{ section.settings.padding_top_mb }} {
      padding-top: {{ section.settings.padding_top }}px;
    }
    [data-section-id="{{ section.id }}"].pb-{{ section.settings.padding_bottom }}-{{ section.settings.padding_bottom_mb }} {
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div data-section-id="{{ section.id }}" data-section-type="gp-product-slider" class="gp-section-wrapper gp-product-slider-wrapper pt-{{ section.settings.padding_top }}-{{ section.settings.padding_top_mb }} pb-{{ section.settings.padding_bottom }}-{{ section.settings.padding_bottom_mb }} gp-recently-viewed-products">
  <div class="gp-product-slider page-width-desktop gp-section-inner">
    <div class="row">
      <div class="col-12">
        {% render 'recently-viewed',
          product_per_row : section.settings.product_per_row,
          product_per_row_tablet: section.settings.product_per_row_tablet,
          product_per_row_mobile: 2,
          product_limit: section.settings.limit
        %}
      </div>
    </div>
  </div>
</div>
<script>
  (function () {
		var $frame = $('#recently-viewed-wrapper');
		var $wrap  = $frame.parent();
    $wrap.find('.next-{{ section.id }}').on('click', function () {
      
      $frame.sly('slideBy', 1);
      
    }); 
    
    $wrap.find('.prev-{{ section.id }}').on('click', function () {
      //document.getElementById("next-control").removeAttribute("disabled");
      $frame.sly('slideBy', -1);
      
    });
	

    setInterval(function () {
        var myElement = document.querySelector('#recently-viewed-products');
        var style = window.getComputedStyle(myElement);
        var matrix = new WebKitCSSMatrix(style.transform);
        var widthSlide = parseFloat(document.getElementById('recently-viewed-products').style.width);
        var maxWidth = parseFloat($("#recently-viewed-products").width());
        
        if(widthSlide - maxWidth + matrix.m41 <= 5){
          document.getElementById("next-control-{{ section.id }}").disabled = "disabled";
        }else{
          document.getElementById("next-control-{{ section.id }}").removeAttribute("disabled");
        }

        if(matrix.m41>-1){
          document.getElementById("prev-control-{{ section.id }}").disabled = "disabled";
        }else{
        document.getElementById("prev-control-{{ section.id }}").removeAttribute("disabled");
      }
    }, 100);
}());
</script>
