{%- style -%}

  .contact-section {
    background: {{ section.settings.colors_background_section }};
    padding: {{ section.settings.pd_mb }}px 0;
  }
  .contact-section .contact-header h3 {
    color: {{ section.settings.colors_title }};
  }
  .contact-section .contact-header p {
    color: {{ section.settings.colors_subtitle }};
  }
  @media(min-width:1025px) {
    .contact-section {
      background: {{ section.settings.colors_background_section }};
      padding: {{ section.settings.pd_top }}px 0 {{ section.settings.pd_bottom }}px;
    }
  }
{%- endstyle -%}

{% schema %}
  {
    "name": "Contact section",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "Setting contact us"
      },
      {
        "type": "text",
        "id": "heading_contact",
        "default": "Contact us",
        "label": "Heading contact section"
      },
      {
        "type": "textarea",
        "id": "sub_heading_contact",
        "default": "If you have any questions, we would love to hear from you, whether it's a complaint or a compliment. Contact us now!",
        "label": "Subtitle contact section"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "options": [
          {
            "value": "left",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.text_alignment.options__1.label"
          }, {
            "value": "center",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.text_alignment.options__2.label"
          }, {
            "value": "right",
            "label": "t:sections.announcement-bar.blocks.announcement.settings.text_alignment.options__3.label"
          }
        ],
        "default": "center",
        "label": "t:sections.announcement-bar.blocks.announcement.settings.text_alignment.label"
      }, {
        "type": "text",
        "id": "id_form",
        "default": "OTkyNjA=",
        "label": "Id form builder",
        "info": "Please copy the id of form generated from the Powerful Contact Form Builder app"
      }, {
        "type": "color",
        "id": "colors_background_section",
        "default": "#FAFAFA",
        "label": "Background color"
      }, {
        "type": "color",
        "id": "colors_title",
        "default": "#000000",
        "label": "Color title"
      }, {
        "type": "color",
        "id": "colors_subtitle",
        "default": "#808080",
        "label": "Color subtitle"
      }, 
      {
        "type": "range",
        "id": "pd_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 80
      },
      {
        "type": "range",
        "id": "pd_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 83
      }, 
      {
        "type": "header",
        "content": "Setting Mobile"
      }, {
        "type": "range",
        "id": "pd_mb",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding mobile",
        "default": 48
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Contact section"
      }
    ]
  }
{% endschema %}